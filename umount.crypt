#!/bin/bash


PROG=$(basename $0)
MAPPER=""

usage()
{
	echo "$0 -m"
	echo "[m personal / MyPassport]"
	 
}

# Process the command line arguments
while getopts m:? 2> /dev/null ARG
do
	case $ARG in

			# personal / MyPassport
		m)      MAPPER=$OPTARG;;

		?)      usage
			exit 1;;
	esac
done

if [ -z "$MAPPER" ]
then
	usage
	exit
fi

#sudo umount /mnt/personal
sudo umount /dev/mapper/$MAPPER
sudo cryptsetup luksClose /mnt/$MAPPER
